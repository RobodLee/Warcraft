<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingActivity"
    android:padding="40dp">

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="30sp"
        android:text="上："/>

    <EditText
        android:id="@+id/up_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_toRightOf="@id/text1" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text1"
        android:textColor="#000"
        android:textSize="30sp"
        android:text="下：" />

    <EditText
        android:id="@+id/down_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_toRightOf="@id/text2"
        android:layout_alignBottom="@id/text2"/>

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text2"
        android:textColor="#000"
        android:textSize="30sp"
        android:text="左：" />

    <EditText
        android:id="@+id/left_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_toRightOf="@id/text3"
        android:layout_alignBottom="@id/text3"/>

    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text3"
        android:textColor="#000"
        android:textSize="30sp"
        android:text="右：" />

    <EditText
        android:id="@+id/right_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_toRightOf="@id/text4"
        android:layout_alignBottom="@id/text4"/>

    <TextView
        android:id="@+id/text5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text4"
        android:textColor="#000"
        android:textSize="30sp"
        android:text="左上：" />

    <EditText
        android:id="@+id/left_up_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_toRightOf="@id/text5"
        android:layout_alignBottom="@id/text5"/>

    <TextView
        android:id="@+id/text6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text5"
        android:textColor="#000"
        android:textSize="30sp"
        android:text="右上：" />

    <EditText
        android:id="@+id/right_up_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_toRightOf="@id/text6"
        android:layout_alignBottom="@id/text6"/>

    <TextView
        android:id="@+id/text7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text6"
        android:textColor="#000"
        android:textSize="30sp"
        android:text="左下：" />

    <EditText
        android:id="@+id/left_down_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_toRightOf="@id/text7"
        android:layout_alignBottom="@id/text7"/>

    <TextView
        android:id="@+id/text8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text7"
        android:textColor="#000"
        android:textSize="30sp"
        android:text="右下：" />

    <EditText
        android:id="@+id/right_down_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_toRightOf="@id/text8"
        android:layout_alignBottom="@id/text8"/>

    <TextView
        android:id="@+id/text9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text8"
        android:textColor="#000"
        android:textSize="30sp"
        android:text="启动：" />

    <EditText
        android:id="@+id/start_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_toRightOf="@id/text9"
        android:layout_alignBottom="@id/text9"/>

    <TextView
        android:id="@+id/text10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text9"
        android:textColor="#000"
        android:textSize="30sp"
        android:text="停止：" />

    <EditText
        android:id="@+id/stop_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_toRightOf="@id/text10"
        android:layout_alignBottom="@id/text10"/>

    <TextView
        android:id="@+id/text11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text10"
        android:textColor="#000"
        android:textSize="30sp"
        android:text="加速：" />

    <EditText
        android:id="@+id/speed_up_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_toRightOf="@id/text11"
        android:layout_alignBottom="@id/text11"/>

    <TextView
        android:id="@+id/text12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text11"
        android:textColor="#000"
        android:textSize="30sp"
        android:text="减速：" />

    <EditText
        android:id="@+id/speed_down_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_toRightOf="@id/text12"
        android:layout_alignBottom="@id/text12"/>

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/speed_down_text"
        android:layout_margin="20dp"
        android:onClick="save"
        android:text="保存"/>

</RelativeLayout>
